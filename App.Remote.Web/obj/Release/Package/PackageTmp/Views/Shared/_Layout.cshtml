<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PICO Management Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="app-header primary-bgcolor">
        <div class="titlebar">
            <div class="flexrow alc jsfs">
                <img class="jabilimage" src="@Url.Content("~/Content/images/Jabil.png")" alt="Jabil header logo">
            </div>
            <div class="flexrow alc jsfs">
                <h3 class="text-white jstc">PICO Management Portal</h3>
            </div>
            <div class="flexrow alc jste white navigation-top">
                <div class="actionitem">
                    <i class="navicon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-display" viewBox="0 0 16 16">
